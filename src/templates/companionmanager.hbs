<form class="nodrop">
    <div class="form-group">
        <label>{{localize "AE.dialogs.random"}}</label>
        <input
            id="companion-random"
            name="companion-random"
            class="companion-random"
            type="checkbox"
            value="{{random}}"
            {{#if random}}checked{{/if}}
            onclick="$(this).attr('value', this.checked ? true : false)"
        />
        <label>{{localize "AE.dialogs.ordered"}}</label>
        <input
            id="companion-ordered"
            class="companion-ordered"
            name="companion-ordered"
            type="checkbox"
            value="{{ordered}}"
            {{#if ordered}}checked{{/if}}
            onclick="$(this).attr('value', this.checked ? true : false)"
        />
        {{!--
        <label>{{localize "AE.dialogs.storeonactor"}}</label>
        <input
            id="companion-storeonactor"
            name="companion-storeonactor"
            class="companion-storeonactor"
            type="checkbox"
            value="{{storeonactor}}"
            {{#if storeonactor}}checked{{/if}}
            onclick="$(this).attr('value', this.checked ? true : false)"
        />
        --}}
        <button
            id="companion-deleteall"
            name="companion-deleteall"
            class="companion-deleteall"
        >{{localize "AE.dialogs.deleteall"}}</button>
    </div>
    <div class="form-group">
        <label>{{localize "AE.dialogs.selectcompendium"}}</label>
        <select
            id="companion-selectcompendium"
            class="companion-selectcompendium"
            name="companion-selectcompendium" data-dtype="String">
            {{#each compendiums as |compendium|}}
            <option {{#if compendium.selected}}selected{{/if}} value="{{compendium.id}}">{{localize compendium.name}}</option>
            {{/each}}
        </select>
    </div>
    <div class="form-group">
        <ol id="companion-list" class="directory-list"></ol>
    </div>
</form>
